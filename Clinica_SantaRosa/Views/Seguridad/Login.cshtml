@{
    ViewData["Title"] = "Acceso Administrativo - Clínica Santa Rosa";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8fafc; /* El mismo gris de tus paneles */
            font-family: 'Poppins', sans-serif;
            color: #1e293b;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        /* Tarjeta idéntica a tus 'card-option' y 'admin-header' */
        .login-card {
            background: white;
            border-radius: 24px;
            padding: 3.5rem 2.5rem;
            width: 100%;
            max-width: 420px;
            border: 1px solid #edf2f7;
            box-shadow: 0 4px 15px rgba(0,0,0,0.03); /* La misma sombra sutil */
            text-align: center;
        }

        .logo-main {
            width: 230px;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .login-title {
            font-weight: 600;
            font-size: 1.4rem;
            color: #0f172a;
            margin-bottom: 0.5rem;
        }

        .login-subtitle {
            font-size: 0.85rem;
            color: #64748b;
            margin-bottom: 2.5rem;
            letter-spacing: 0.2px;
        }

        /* Estilo de Inputs alineado a tus formularios */
        .custom-input-group {
            position: relative;
            margin-bottom: 1.25rem;
            text-align: left;
        }

            .custom-input-group label {
                font-size: 0.75rem;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: #94a3b8;
                margin-bottom: 0.5rem;
                display: block;
            }

        .form-control {
            border-radius: 12px;
            border: 1px solid #e2e8f0;
            padding: 0.75rem 1rem;
            background-color: #fcfdfe;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.05);
                background-color: #fff;
            }

        /* Botón con el mismo estilo que tus botones de panel */
        .btn-login-primary {
            width: 100%;
            background-color: #3b82f6;
            color: white;
            border: none;
            padding: 0.8rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            margin-top: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.3s ease;
        }

            .btn-login-primary:hover {
                background-color: #2563eb;
                transform: translateY(-2px);
                box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.2);
            }

        /* Footer del Login igual a tus footers de panel */
        .login-footer {
            margin-top: 2.5rem;
            font-size: 0.8rem;
            color: #cbd5e1;
            font-weight: 500;
        }

        .brand-accent {
            color: #3b82f6;
            font-weight: 700;
        }
    </style>
</head>

<body>

    <div class="login-card">

        <img src="/images/ClinicaSantaRosa.png" alt="Logo Clínica" class="logo-main">

        <h2 class="login-title">Centro de Control</h2>
        <p class="login-subtitle">Ingrese sus credenciales para continuar</p>

        <form method="post" autocomplete="off">

            <div class="custom-input-group">
                <label for="username">Usuario</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0" style="border-radius: 12px 0 0 12px;">
                        <i class="bi bi-person text-primary"></i>
                    </span>
                    <input type="text"
                           class="form-control border-start-0"
                           id="username"
                           name="username"
                           placeholder="admin_sr"
                           required
                           style="border-radius: 0 12px 12px 0;">
                </div>
            </div>

            <div class="custom-input-group">
                <label for="contrasenia">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0" style="border-radius: 12px 0 0 12px;">
                        <i class="bi bi-shield-lock text-primary"></i>
                    </span>
                    <input type="password"
                           class="form-control border-start-0"
                           id="contrasenia"
                           name="contrasenia"
                           placeholder="&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;"
                           required
                           style="border-radius: 0 12px 12px 0;">
                </div>
            </div>

            <button type="submit" class="btn-login-primary">
                Ingresar al Sistema <i class="bi bi-chevron-right"></i>
            </button>
        </form>

        <div class="login-footer">
            &copy; 2025 <span class="brand-accent">Clínica Santa Rosa</span>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const errorLogin = '@TempData["ErrorLogin"]';
        const successMsg = '@TempData["Success"]';

        if (errorLogin) {
            Swal.fire({
                icon: 'error',
                title: 'Acceso Denegado',
                text: errorLogin,
                confirmButtonColor: '#3b82f6',
                customClass: { popup: 'rounded-4' }
            });
        }

        if (successMsg) {
            Swal.fire({
                icon: 'info',
                title: 'Aviso',
                text: successMsg,
                confirmButtonColor: '#3b82f6',
                customClass: { popup: 'rounded-4' }
            });
        }
    </script>
</body>
</html>