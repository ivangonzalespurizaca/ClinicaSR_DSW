@model IEnumerable<ClinicaSR.BL.BE.MedicoBE>

@{
    ViewData["Title"] = "Gestión de Médicos";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<style>
    /* Diseño Minimalista y Profesional (Unificado) */
    .page-container {
        margin-top: 1.5rem;
    }

    .card-modern {
        border: none;
        border-radius: 12px;
        background: #ffffff;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

        .card-modern .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #edf2f7;
            padding: 1.25rem 1.5rem;
            border-radius: 12px 12px 0 0;
        }

    .card-title {
        color: #2d3748;
        font-weight: 600;
        margin-bottom: 0;
    }

    /* Tabla Estilizada */
    .table-modern thead th {
        background-color: #f8fafc;
        color: #4a5568;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.025em;
        border-bottom: 2px solid #e2e8f0;
        padding: 1rem;
    }

    .table-modern tbody td {
        padding: 1rem;
        color: #4a5568;
        vertical-align: middle;
        border-bottom: 1px solid #edf2f7;
    }

    /* Badges de Estado y Especialidad */
    .badge-status {
        padding: 0.4em 0.8em;
        font-weight: 500;
        border-radius: 6px;
        font-size: 0.85rem;
        display: inline-block;
    }

    .st-especialidad {
        background-color: #ebf4ff;
        color: #2b6cb0;
    }

    .st-ligado {
        background-color: #e2e8f0;
        color: #4a5568;
    }

    /* Ajuste de Botones de Acción */
    .btn-action-group .btn {
        border-radius: 6px;
        padding: 0.35rem 0.6rem;
        font-size: 0.85rem;
        transition: all 0.2s;
    }
</style>

<div class="page-container container-fluid px-4">
    <div class="card card-modern">

        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title">
                <i class="bi bi-person-vcard-fill me-2 text-primary"></i>Gestión de Médicos
            </h5>
            <div class="header-actions">
                <a asp-action="Registro" class="btn btn-primary shadow-sm btn-sm px-3">
                    <i class="bi bi-plus-lg me-1"></i> Nuevo Médico
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-modern">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Médico</th>
                            <th>DNI</th>
                            <th>Colegiatura</th>
                            <th>Teléfono</th>
                            <th>Especialidad</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted small">#@item.ID_Medico</td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Nombres @item.Apellidos</div>
                                </td>
                                <td><code class="text-primary fw-bold">@item.DNI</code></td>
                                <td><span class="text-secondary small">@item.Nro_Colegiatura</span></td>
                                <td>
                                    <i class="bi bi-telephone me-1 text-muted small"></i>
                                    @item.Telefono
                                </td>
                                <td>
                                    <span class="badge-status st-especialidad">
                                        <i class="bi bi-patch-check me-1 small"></i>@item.EspecialidadBE?.Nombre
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-action-group gap-1">
                                        <a asp-action="Editar" asp-route-id="@item.ID_Medico"
                                           class="btn btn-light text-warning border" title="Editar médico">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        @if (!item.TieneCitas)
                                        {
                                            <button type="button" class="btn btn-light text-danger border btn-eliminar"
                                                    data-id="@item.ID_Medico" title="Eliminar médico">
                                                <i class="bi bi-trash3"></i>
                                            </button>

                                            <form id="form-eliminar-@item.ID_Medico" asp-action="Eliminar"
                                                  asp-controller="Medico" method="post" class="d-none">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.ID_Medico" />
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="badge-status st-ligado" title="No se puede eliminar: tiene citas vinculadas">
                                                <i class="bi bi-lock-fill small"></i> Ligado
                                            </span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center p-3">
            <a asp-controller="Home" asp-action="PanelAdministrador" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left-short"></i> Volver al panel
            </a>
            <span class="text-muted small fw-medium">
                Total Médicos: <span class="badge bg-primary rounded-pill">@Model.Count()</span>
            </span>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Confirmación de eliminación
        document.querySelectorAll('.btn-eliminar').forEach(btn => {
            btn.addEventListener('click', function () {
                const id = this.dataset.id;

                Swal.fire({
                    title: '¿Eliminar médico?',
                    text: "Esta acción no se puede deshacer y borrará permanentemente el registro del médico.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#f8f9fa',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar',
                    customClass: {
                        cancelButton: 'text-dark border'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById('form-eliminar-' + id).submit();
                    }
                });
            });
        });

        // Alertas de éxito o error
        @if (TempData["Success"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Operación exitosa',
                    html: '@Html.Raw(TempData["Success"])',
                    timer: 3000,
                    showConfirmButton: false
                });
                </text>
        }

        @if (TempData["Error"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Atención',
                    html: '@Html.Raw(TempData["Error"])'
                });
                </text>
        }
    </script>
}