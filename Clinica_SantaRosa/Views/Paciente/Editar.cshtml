@model ClinicaSR.BL.BE.PacienteBE

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Editar Paciente | Clínica SR</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap 5 -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Estilo hospital moderno -->
    <style>
        body {
            background-color: #f1f5f9;
            font-family: "Segoe UI", system-ui, sans-serif;
        }

        .card-hospital {
            max-width: 650px;
            margin: auto;
            border-radius: 14px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .header-hospital {
            background: linear-gradient(90deg, #0d6efd, #2563eb);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 14px 14px 0 0;
        }

            .header-hospital h5 {
                margin: 0;
                font-weight: 600;
            }

        .sub-header {
            font-size: 0.85rem;
            opacity: 0.9;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.9rem;
        }

        .form-control {
            border-radius: 10px;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.15rem rgba(13,110,253,.25);
            }

        .footer-actions {
            background-color: #f8fafc;
            border-top: 1px solid #dee2e6;
            padding: 0.75rem 1.5rem;
            border-radius: 0 0 14px 14px;
        }
    </style>
</head>

<body class="py-5">

    <div class="card card-hospital">

        <!-- HEADER -->
        <div class="header-hospital">
            <h5>Editar Paciente</h5>
            <div class="sub-header">Actualización de datos clínicos</div>
        </div>

        <!-- BODY -->
        <div class="card-body">

            <form asp-action="Editar" method="post">
                <input type="hidden" asp-for="ID_Paciente" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="Nombres" class="form-label"></label>
                        <input asp-for="Nombres" class="form-control" />
                        <span asp-validation-for="Nombres" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Apellidos" class="form-label"></label>
                        <input asp-for="Apellidos" class="form-control" />
                        <span asp-validation-for="Apellidos" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DNI" class="form-label"></label>
                        <input asp-for="DNI" class="form-control" />
                        <span asp-validation-for="DNI" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Fecha_Nacimiento" class="form-label"></label>
                        <input asp-for="Fecha_Nacimiento" type="date" class="form-control" />
                        <span asp-validation-for="Fecha_Nacimiento" class="text-danger small"></span>
                    </div>

                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-action="Listado"
                       class="btn btn-outline-secondary">
                        ⬅ Cancelar
                    </a>

                    <button type="submit"
                            class="btn btn-primary px-4">
                        💾 Guardar cambios
                    </button>
                </div>

            </form>

        </div>

        <!-- FOOTER -->
        <div class="footer-actions text-muted small">
            Clínica Santa Rosa · Sistema de Gestión
        </div>

    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
