@model IEnumerable<ClinicaSR.BL.BE.PacienteBE>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Pacientes | Clínica SR</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap 5 -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Estilos hospital modernos -->
    <style>
        body {
            background-color: #f1f5f9;
            font-family: "Segoe UI", system-ui, sans-serif;
        }

        .card-hospital {
            border-radius: 14px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            border: none;
        }

        .header-hospital {
            background: linear-gradient(90deg, #0d6efd, #2563eb);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 14px 14px 0 0;
        }

            .header-hospital h5 {
                margin: 0;
                font-weight: 600;
            }

        .sub-header {
            font-size: 0.85rem;
            opacity: 0.9;
        }

        .table thead th {
            background-color: #e9f1ff;
            color: #0d6efd;
            font-weight: 600;
            border-bottom: 2px solid #cfe2ff;
        }

        .table tbody tr:hover {
            background-color: #f8fbff;
        }

        .btn-action {
            padding: 4px 10px;
            font-size: 0.8rem;
        }

        .badge-cita {
            background-color: #adb5bd;
            font-size: 0.75rem;
        }

        .footer-actions {
            background-color: #f8fafc;
            border-top: 1px solid #dee2e6;
            padding: 0.75rem 1.5rem;
        }
    </style>
</head>

<body class="container py-4">

    <div class="card card-hospital">

        <!-- HEADER -->
        <div class="header-hospital d-flex justify-content-between align-items-center">
            <div>
                <h5>Gestión de Pacientes</h5>
                <div class="sub-header">Clínica Santa Rosa</div>
            </div>

            <a asp-action="Registro" class="btn btn-light btn-sm">
                ➕ Nuevo Paciente
            </a>
        </div>

        <!-- BODY -->
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>DNI</th>
                            <th>Fecha Nac.</th>
                            <th>Teléfono</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombres</td>
                                <td>@item.Apellidos</td>
                                <td>@item.DNI</td>
                                <td>@(item.Fecha_Nacimiento?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td>@item.Telefono</td>
                                <td class="text-center">
                                    <a asp-action="Editar"
                                       asp-route-id="@item.ID_Paciente"
                                       class="btn btn-outline-primary btn-sm btn-action">
                                        ✏️ Editar
                                    </a>

                                    @if (!item.TieneCitas)
                                    {
                                        <button type="button"
                                                class="btn btn-outline-danger btn-sm btn-action btn-eliminar"
                                                data-id="@item.ID_Paciente">
                                            🗑 Eliminar
                                        </button>

                                        <form id="form-eliminar-@item.ID_Paciente"
                                              asp-action="Eliminar"
                                              asp-controller="Paciente"
                                              method="post"
                                              class="d-none">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.ID_Paciente" />
                                        </form>

                                    }
                                    else
                                    {
                                        <span class="badge badge-cita">
                                            Cita ligada
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

        <!-- FOOTER -->
        <div class="footer-actions d-flex justify-content-between">
            <a asp-controller="Home"
               asp-action="PanelRecepcionista"
               class="btn btn-outline-secondary btn-sm">
                ⬅ Regresar al panel
            </a>

            <span class="text-muted small">
                Total de pacientes: @Model.Count()
            </span>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>

<script>
    document.querySelectorAll('.btn-eliminar').forEach(btn => {
        btn.addEventListener('click', function () {
            const id = this.dataset.id;

            Swal.fire({
                title: '¿Eliminar paciente?',
                text: 'No podrás revertir esta acción',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('form-eliminar-' + id).submit();
                }
            });
        });
    });
</script>


</html>

@if (TempData["Success"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Operación exitosa',
            text: '@TempData["Success"]',
            timer: 2500,
            showConfirmButton: false
        });
    </script>
}

@if (TempData["Error"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'No se pudo completar',
            text: '@TempData["Error"]'
        });
    </script>
}
