@model ClinicaSR.BL.BE.PacienteBE

@{
    ViewData["Title"] = "Registrar Paciente";
    Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";
}

<style>
    /* Diseño Minimalista y Profesional (Unificado con el resto del sistema) */
    .page-container {
        margin-top: 2rem;
        max-width: 750px;
    }

    .card-modern {
        border: none;
        border-radius: 12px;
        background: #ffffff;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .card-header-modern {
        background-color: #f8f9fa;
        border-bottom: 1px solid #edf2f7;
        padding: 1.25rem 1.5rem;
        border-radius: 12px 12px 0 0;
    }

    .card-title {
        color: #2d3748;
        font-weight: 600;
        margin-bottom: 0;
        font-size: 1.25rem;
    }

    .sub-header {
        font-size: 0.85rem;
        color: #718096;
    }

    .form-label {
        font-weight: 500;
        color: #4a5568;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        padding: 0.6rem 0.75rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .form-control:focus {
            border-color: #3182ce;
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.15);
        }

    .footer-hospital {
        background-color: #f8fafc;
        border-top: 1px solid #edf2f7;
        padding: 1rem;
        border-radius: 0 0 12px 12px;
        color: #a0aec0;
        font-size: 0.8rem;
    }
</style>

<div class="container page-container pb-5">
    <div class="card card-modern">

        <div class="card-header-modern">
            <h5 class="card-title">
                <i class="bi bi-person-plus-fill me-2 text-primary"></i>Registrar Paciente
            </h5>
            <div class="sub-header">Ingrese los datos personales para la apertura de la historia clínica</div>
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-action="Registro" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Nombres" class="form-label"><i class="bi bi-person me-1"></i>Nombres</label>
                        <input asp-for="Nombres" class="form-control" placeholder="Ej: Maria Elena" />
                        <span asp-validation-for="Nombres" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Apellidos" class="form-label"><i class="bi bi-person me-1"></i>Apellidos</label>
                        <input asp-for="Apellidos" class="form-control" placeholder="Ej: Gonzales Prada" />
                        <span asp-validation-for="Apellidos" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DNI" class="form-label"><i class="bi bi-card-text me-1"></i>DNI / Identificación</label>
                        <input asp-for="DNI" class="form-control" placeholder="8 dígitos" maxlength="8" />
                        <span asp-validation-for="DNI" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label"><i class="bi bi-telephone me-1"></i>Teléfono de Contacto</label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ej: 999888777" />
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Fecha_Nacimiento" class="form-label"><i class="bi bi-calendar-event me-1"></i>Fecha de Nacimiento</label>
                        <input asp-for="Fecha_Nacimiento" type="date" class="form-control" />
                        <span asp-validation-for="Fecha_Nacimiento" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-5 d-flex justify-content-end gap-2 border-top pt-4">
                    <a asp-action="Listado" class="btn btn-light border px-4">
                        <i class="bi bi-arrow-left me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary px-5 shadow-sm">
                        <i class="bi bi-check-circle me-1"></i> Registrar Paciente
                    </button>
                </div>

            </form>
        </div>

        <div class="footer-hospital text-center">
            <i class="bi bi-shield-check me-1"></i> Clínica Santa Rosa · Sistema de Admisión
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}