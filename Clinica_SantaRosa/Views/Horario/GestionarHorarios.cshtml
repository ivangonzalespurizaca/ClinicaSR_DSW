@model Clinica_SantaRosa.PL.WebApp.Models.GestionarHorariosViewModel

@{
    ViewData["Title"] = "Gestión de Horarios";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container mt-4">
    <div class="header-bar">
        <h3><i class="bi bi-calendar-check me-2"></i>Gestión de Horarios</h3>
    </div>

    <div class="card-form mt-4">
        <div class="row g-3">
            <div class="col-md-3">
                <label><i class="bi bi-credit-card-2-front me-1"></i>DNI</label>
                <input id="medicoDni" value="@Model.Medico?.DNI" class="form-control" readonly>
            </div>
            <div class="col-md-3">
                <label><i class="bi bi-person me-1"></i>Nombres</label>
                <input id="medicoNombres" value="@Model.Medico?.Nombres" class="form-control" readonly>
            </div>
            <div class="col-md-3">
                <label><i class="bi bi-person-badge me-1"></i>Apellidos</label>
                <input id="medicoApellidos" value="@Model.Medico?.Apellidos" class="form-control" readonly>
            </div>
            <div class="col-md-3">
                <label><i class="bi bi-heart-pulse me-1"></i>Especialidad</label>
                <input id="medicoEspecialidad" value="@Model.Medico?.EspecialidadBE?.Nombre" class="form-control" readonly>
            </div>
        </div>
    </div>

    <button class="btn btn-info d-flex align-items-center mb-4" data-bs-toggle="modal" data-bs-target="#modalMedico">
        <i class="bi bi-search me-1"></i>Buscar Médico
    </button>

    <div class="modal fade" id="modalMedico" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content rounded-3 shadow-sm">
                <div class="modal-header" style="background-color:#007bff; color:white;">
                    <h5 class="modal-title"><i class="bi bi-person-badge me-1"></i>Buscar Médico</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="input-group mb-3">
                        <input type="text" id="buscadorMedico" class="form-control" placeholder="Nombre, apellido o DNI...">
                        <button id="btnBuscarMedico" class="btn btn-info" onclick="buscarMedicos()"><i class="bi bi-search"></i> Buscar</button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered text-center align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellidos</th>
                                    <th>Especialidad</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody id="cuerpoMedicos"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <h5 class="mb-3"><i class="bi bi-table me-1"></i>Horarios Registrados</h5>
    <div class="table-responsive mb-4">
        <table class="table table-bordered text-center align-middle">
            <thead>
                <tr>
                    <th>Día</th>
                    <th>Entrada</th>
                    <th>Salida</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ListaHorarios != null && Model.ListaHorarios.Any())
                {
                    @foreach (var hor in Model.ListaHorarios)
                    {
                        <tr>
                            <td>@hor.Dia_Semana</td>
                            <td>@hor.Horario_Entrada.ToString(@"hh\:mm")</td>
                            <td>@hor.Horario_Salida.ToString(@"hh\:mm")</td>
                            <td>
                                <form asp-action="Eliminar" method="post" style="display:inline;">
                                    <input type="hidden" name="idHorario" value="@hor.ID_Horario" />
                                    <input type="hidden" name="idMedico" value="@Model.Medico.ID_Medico" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash me-1"></i>Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="no-data">No hay horarios registrados para este médico</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-form">
        <form asp-action="Guardar" method="post">
            <input type="hidden" asp-for="NuevoHorario.MedicoBE.ID_Medico" value="@Model.Medico?.ID_Medico" id="txtIdMedicoHidden">

            <div class="row g-3">
                <div class="col-md-3">
                    <label>Día</label>
                    <select asp-for="NuevoHorario.Dia_Semana" class="form-select" required>
                        <option value="" disabled selected>Seleccionar día</option>
                        @foreach (var dia in Enum.GetValues(typeof(ClinicaSR.BL.BE.DiaSemana)))
                        {
                            <option value="@dia">@dia</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label>Hora Entrada</label>
                    <select asp-for="NuevoHorario.Horario_Entrada" class="form-select" required>
                        <option value="" disabled selected>00:00</option>
                        @for (int i = 7; i <= 22; i++)
                        {
                            string hora = i.ToString("D2") + ":00";
                            <option value="@hora">@hora</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label>Hora Salida</label>
                    <select asp-for="NuevoHorario.Horario_Salida" class="form-select" required>
                        <option value="" disabled selected>00:00</option>
                        @for (int i = 7; i <= 22; i++)
                        {
                            string hora = i.ToString("D2") + ":00";
                            <option value="@hora">@hora</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-plus-circle me-1"></i>Registrar
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="mt-3">
        <a asp-action="Gestionar" class="btn btn-secondary">Limpiar / Nuevo</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // 1. Notificación de Éxito
                @if (TempData["Success"] != null)
                {
                        <text>
                        Swal.fire({
                            title: '¡Logrado!',
                            text: '@TempData["Success"]',
                            icon: 'success',
                            confirmButtonColor: '#28c76f'
                        });
                        </text>
                }

                // 2. Notificación de Error
                @if (TempData["Error"] != null)
                {
                        <text>
                        Swal.fire({
                            title: 'Error',
                            text: '@TempData["Error"]',
                            icon: 'error',
                            confirmButtonColor: '#e63946'
                        });
                        </text>
                }
        // --- CÓDIGO NUEVO: Cargar lista al abrir el modal ---
        document.addEventListener('DOMContentLoaded', function () {
            var modalMedico = document.getElementById('modalMedico');

            modalMedico.addEventListener('shown.bs.modal', function () {
                // Limpiamos el buscador por si tenía algo escrito anteriormente
                document.getElementById("buscadorMedico").value = "";
                // Ejecutamos la búsqueda (al estar el input vacío, traerá todos)
                buscarMedicos();
            });
        });

        // Función AJAX para buscar médicos
        async function buscarMedicos() {
            const filtro = document.getElementById("buscadorMedico").value;
            try {
                const res = await fetch(`/Horarios/BuscarMedico?filtro=${filtro}`);
                const data = await res.json();

                let html = "";
                data.forEach(m => {
                    html += `
                        <tr>
                            <td>${m.nombres}</td>
                            <td>${m.apellidos}</td>
                            <td>${m.especialidadBE.nombre}</td>
                            <td>
                                <button class="btn btn-success btn-sm" onclick="seleccionarMedico(${m.iD_Medico})">
                                    <i class="bi bi-check-circle"></i> Seleccionar
                                </button>
                            </td>
                        </tr>`;
                });
                document.getElementById("cuerpoMedicos").innerHTML = html;
            } catch (err) {
                console.error("Error al buscar médicos:", err);
            }
        }

        function seleccionarMedico(id) {
            window.location.href = `/Horarios/Gestionar?idMedico=${id}`;
        }
    </script>
}