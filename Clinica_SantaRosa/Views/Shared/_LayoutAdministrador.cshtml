@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    // Recuperamos los datos de sesión para la identidad
    var session = HttpContextAccessor.HttpContext?.Session;
    string fotoPerfil = session?.GetString("FotoPerfil") ?? "/images/default-user.jpg";
    string nombreUsuario = session?.GetString("NombreCompleto") ?? "Usuario";
    string rolUsuario = session?.GetString("UsuarioRol");
    string username = session?.GetString("Username") ?? ""; // Asegúrate de guardar esto en SeguridadController
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clínica Santa Rosa</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .navbar-logo {
            width: 140px; /* Tamaño ajustado para no deformar la cabecera */
            height: auto;
        }

        .user-avatar-nav {
            width: 38px;
            height: 38px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #007bff;
            transition: 0.3s;
        }

            .user-avatar-nav:hover {
                transform: scale(1.1);
            }

        .nav-link {
            font-weight: 500;
            color: #444 !important;
        }

            .nav-link:hover {
                color: #007bff !important;
            }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm mb-4">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-controller="Home" asp-action="PanelAdministrador">
                    <img src="/images/ClinicaSantaRosaLogo.png" alt="Logo" class="navbar-logo">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="RegistrarUsuario">
                                <i class="bi bi-person-plus me-1"></i>Usuarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Medicos" asp-action="Index">
                                <i class="bi bi-person-vcard me-1"></i>Médicos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Horario" asp-action="Gestionar">
                                <i class="bi bi-calendar-event me-1"></i>Horarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Especialidades" asp-action="Index">
                                <i class="bi bi-hospital me-1"></i>Especialidades
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        <div class="me-3 text-end d-none d-sm-block">
                            <div class="fw-bold small" style="line-height: 1;">@nombreUsuario</div>
                            <span class="badge bg-light text-primary border" style="font-size: 0.65rem;">@rolUsuario</span>
                        </div>

                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="@fotoPerfil" class="user-avatar-nav" alt="Foto Perfil">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                <li class="px-3 py-2 d-sm-none">
                                    <div class="fw-bold">@nombreUsuario</div>
                                </li>
                                <li>
                                    <form asp-controller="Seguridad" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3 bg-white">
        <div class="container text-center">
            &copy; 2025 - <span class="text-primary fw-bold">Clínica Santa Rosa</span> — Gestión Interna
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>