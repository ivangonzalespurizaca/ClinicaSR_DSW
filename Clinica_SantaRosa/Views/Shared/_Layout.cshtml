@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clínica SR</title>
    @* Asegúrate de tener Bootstrap referenciado *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Seguridad" asp-action="Index">Clínica SR</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Seguridad" asp-action="Index">Inicio</a>
                        </li>

                        @* Validación de Sesión para mostrar menú de ADMIN *@
                        @if (HttpContextAccessor.HttpContext?.Session.GetString("UsuarioRol") == "ADMINISTRADOR")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Seguridad" asp-action="ListaUsuarios">Gestión de Usuarios</a>
                            </li>
                        }
                    </ul>

                    @* Sección de Usuario y Logout *@
                    <div class="d-flex align-items-center">
                        <span class="me-3">
                            Hola, <b>@HttpContextAccessor.HttpContext?.Session.GetString("NombreCompleto")</b>
                        </span>
                        <a class="btn btn-outline-danger btn-sm" asp-controller="Seguridad" asp-action="Logout">Salir</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @* Esta línea es OBLIGATORIA para que tus vistas (Index, ListaUsuarios, etc.) se muestren *@
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Clínica Santa Rosa
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>